 <!-- Landing gear animation ===============================================-->
 <!-- Main gear -->
 <animation>
  <name>Main landing gear</name>
  <object-name>main_lgear_tyre</object-name>
  <object-name>main_lgear</object-name>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Main landing gear</object-name>
  <property>gear/gear[0]/steering-norm</property>
  <center>
   <x-m> 31.60 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>-13.80 </z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-360.0</dep>
   </entry>
   <entry>
    <ind>0.0</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>360.0</dep>
   </entry>
  </interpolation>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>Main landing gear</object-name>
  <property>gear/gear[0]/compression-ft</property>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>0.5</ind>
    <dep>0.1524</dep>
   </entry>
  </interpolation>
 </animation>

